{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5" style="max-width: 400px;">
        <h1 class="h3 mb-3 fw-normal text-center">{{ 'login.title'|trans }}</h1>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info" role="alert">
                {{ 'login.logged_in_as'|trans({'%username%': app.user.userIdentifier}) }},
                <a href="{{ path('app_logout') }}">{{ 'login.logout'|trans }}</a>
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group mb-3">
                <label for="username">{{ 'login.email'|trans }}</label>
                <input type="text" id="username" name="_username" class="form-control" autocomplete="username"
                       value="{{ last_username }}" required autofocus>
            </div>

            <div class="form-group mb-3">
                <label for="password">{{ 'login.password'|trans }}</label>
                <input type="password" id="password" name="_password" class="form-control"
                       autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary w-100">{{ 'login.submit'|trans }}</button>
        </form>
    </div>
{% endblock %}
